<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chenyue404.androidapp.MainActivity">

    <Button
        android:id="@+id/bt0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="防抖"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不防抖"
        app:layout_constraintStart_toEndOf="@id/bt0"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:id="@+id/gl0"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="?actionBarSize"
        android:layout_height="wrap_content" />

    <View
        app:layout_constraintTop_toBottomOf="@id/gl0"
        app:layout_constraintBottom_toBottomOf="@id/gl0"
        android:background="@color/black_40"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>